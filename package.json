{
  "name": "@steipete/oracle",
  "version": "1.3.0",
  "description": "CLI wrapper around OpenAI Responses API with GPT-5 Pro, GPT-5.1, and GPT-5.1 Codex high reasoning modes.",
  "type": "module",
  "main": "dist/bin/oracle-cli.js",
  "bin": {
    "oracle": "dist/bin/oracle-cli.js",
    "oracle-mcp": "dist/bin/oracle-mcp.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && pnpm run build:vendor",
    "build:vendor": "mkdir -p dist/vendor && cp -R vendor/oracle-notifier dist/vendor/oracle-notifier || true",
    "start": "pnpm run build && node ./dist/scripts/run-cli.js",
    "oracle": "pnpm start",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm run typecheck && biome lint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "pnpm run build",
    "mcp": "pnpm run build && node ./dist/bin/oracle-mcp.js"
  },
  "files": [
    "dist/**/*",
    "assets-oracle-icon.png",
    "vendor/oracle-notifier/OracleNotifier.swift",
    "vendor/oracle-notifier/OracleNotifier.app/**",
    "vendor/oracle-notifier/build-notifier.sh",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steipete/oracle.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steipete/oracle/issues"
  },
  "homepage": "https://github.com/steipete/oracle#readme",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "chalk": "^5.6.2",
    "chrome-launcher": "^1.2.1",
    "chrome-remote-interface": "^0.33.3",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.3",
    "gpt-tokenizer": "^3.4.0",
    "inquirer": "^9.3.8",
    "json5": "^2.2.3",
    "keytar": "^7.9.0",
    "kleur": "^4.1.5",
    "markdansi": "^0.1.3",
    "openai": "^6.9.0",
    "shiki": "^3.15.0",
    "sqlite3": "^5.1.7",
    "toasted-notifier": "^10.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/chrome-remote-interface": "^0.31.14",
    "@types/inquirer": "^9.0.9",
    "@types/json5": "^0.0.30",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "4.0.9",
    "devtools-protocol": "^0.0.1545402",
    "es-toolkit": "^1.42.0",
    "puppeteer-core": "^24.30.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  },
  "optionalDependencies": {
    "win-dpapi": "^1.1.0"
  },
  "pnpm": {
    "overrides": {
      "zod": "3.24.1"
    },
    "onlyBuiltDependencies": [
      "keytar",
      "sqlite3",
      "win-dpapi"
    ]
  }
}
